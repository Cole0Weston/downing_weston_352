<Window x:Class="CharacterManager.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterManager"
        mc:Ignorable="d"
        Title="InventoryWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="InventoryList" HorizontalAlignment="Center" Height="302" Margin="0,0,0,0" VerticalAlignment="Center" Width="614"/>
        <Button x:Name="AddWeaponButton" Content="Add Weapon" HorizontalAlignment="Left" Margin="9,58,0,0" VerticalAlignment="Top" Width="75" Height="75" Click="AddWeaponButton_Click"/>
        <Button x:Name="AddArmorButton" Content="Add Armor" HorizontalAlignment="Left" Margin="9,177,0,0" VerticalAlignment="Top" Width="75" Height="75" Click="AddArmorButton_Click"/>
        <Button x:Name="AddMiscButton" Content="Add Misc" HorizontalAlignment="Left" Margin="9,286,0,0" VerticalAlignment="Top" Width="75" Height="74" Click="AddMiscButton_Click"/>
    </Grid>
</Window>
